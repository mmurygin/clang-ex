    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug grep",
            "type": "cppdbg",
            "request": "launch",
            "preLaunchTask": "grep",
            "program": "${workspaceFolder}/bin/grep",
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "externalConsole": false,
            "MIMode": "gdb",
        },
        {
            "name": "Debug htoi",
            "type": "cppdbg",
            "request": "launch",
            "preLaunchTask": "htoi",
            "program": "${workspaceFolder}/bin/htoi",
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "externalConsole": false,
            "MIMode": "gdb",
        },
        {
            "name": "Debug binsearch",
            "type": "cppdbg",
            "request": "launch",
            "preLaunchTask": "binsearch",
            "program": "${workspaceFolder}/bin/binsearch",
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "externalConsole": false,
            "MIMode": "gdb",
        }
    ]
}
