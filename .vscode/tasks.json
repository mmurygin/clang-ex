{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "grep",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g3",
                "-o0",
                "src/grep.c",
                "src/string.c",
                "-o",
                "bin/grep"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
        },
        {
            "label": "htoi",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-o0",
                "-g3",
                "-lm",
                "-o",
                "bin/htoi",
                "src/htoi.c",
                "src/string.c",
                "src/type.c",
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ]
}
