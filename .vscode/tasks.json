{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build grep",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g3",
                "-o0",
                "src/grep.c",
                "src/string.c",
                "-o",
                "bin/grep"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "build gdbt",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-o0",
                "-g3",
                "-o",
                "bin/gdbt",
                "src/test-gdb.c",
            ],
            "problemMatcher": [
                "$gcc"
            ]
        }

    ]
}
